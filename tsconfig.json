{
  "compilerOptions": {
    "target": "ES2015", // Ou superior, como ES6, ES2020, etc.
    "downlevelIteration": true, // Habilita suporte a iteração para estruturas como Set e Map
    
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"],
      "@core/*": ["./src/core/*"],
      "@modules/auth": ["./src/modules/auth"],
      "@modules/learning": ["./src/modules/learning"],
      "@modules/learning/video-courses": ["./src/modules/learning/services/video-courses"],
      "@modules/learning/practice-courses": ["./src/modules/learning/services/practice-courses"],
      "@modules/gamification": ["./src/modules/gamification"],
      "@modules/teacher": ["./src/modules/teacher"],
      "@modules/student": ["./src/modules/student"],
      "@modules/admin": ["./src/modules/admin"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
